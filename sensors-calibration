
/*
Make: Wearable Electronics
 Calibration example
 */

//initialize variables
int lightSensorPin = 2;
int lightSensorValue = 0;
int highestSensorValue = 0;
int lowestSensorValue = 1023;


void setup() {
  //initialize serial communication:
  Serial.begin(9600);

  pinMode(13, OUTPUT);

  //turn LED on while calibration is happening
  digitalWrite(13, HIGH);

  //during the first 5 seconds of the program
  while (millis() < 5000){
    //read the light sensor
    lightSensorValue = analogRead(lightSensorPin);

    //if it is lower that the lowest sensor value so far
    if(lightSensorValue < lowestSensorValue){
      //adjust the lowest sensor value
      lowestSensorValue = lightSensorValue;
    }
    //if it is higher than the highest light sensor value so far
    if(lightSensorValue > highestSensorValue){
      //adjust the highest light sensor value
      highestSensorValue = lightSensorValue;
    }
  }

  //print calibration results
  Serial.print("Lowest Sensor Value: ");
  Serial.print(lowestSensorValue);
  Serial.print(", Highest Sensor Value: ");
  Serial.println(highestSensorValue);

  //turn LED off
  digitalWrite(13, LOW);

}

void loop() {
  
  //Make use of your calibrated sensor readings in your program here!
  
}
