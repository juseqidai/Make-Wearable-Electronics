/*
Make: Wearable Electronics
 Mapping example
 */

//initialize variables
int lightSensorValue = 0;
int mappedLightSensorValue = 0;

void setup() {
  //initialize serial communication:
  Serial.begin(9600);
}
void loop() {
  // read pin A2 & store value in a variable:
  lightSensorValue = analogRead(A2);
  //map sensor value
  mappedLightSensorValue = map(lightSensorValue, 25, 940, 255, 0);
  //set analog output accordingly
  analogWrite(9, mappedLightSensorValue);

  // print the sensor & mapped sensor values:
  Serial.print("Light Sensor Value: ");
  Serial.print(lightSensorValue);
  Serial.print(", Mapped Light Sensor Value: ");
  Serial.println(mappedLightSensorValue);

  // delay between readings:
  delay(100);
}
